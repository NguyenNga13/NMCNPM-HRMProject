<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/info_margin_left"
    android:paddingRight="@dimen/info_margin_left"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_light_blue">
        <ImageView
            android:layout_width="@dimen/icon_info_width"
            android:layout_height="@dimen/icon_info_height"
            android:src="@drawable/icon_language"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_language"
            android:textColor="@color/colorWhite"
            android:text="Tiếng Anh"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_stress"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/info_margin_left"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/icon_margin_left"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="@dimen/icon_info_width"
            android:layout_height="@dimen/icon_info_height"
            android:src="@drawable/icon_certificate"/>
        <TextView
            android:layout_width="@dimen/width_column"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cerfiticate"
            android:layout_marginLeft="@dimen/info_margin_left"
            android:text="TOEIC"/>
        <ImageView
            android:layout_width="@dimen/icon_info_width"
            android:layout_height="@dimen/icon_info_height"
            android:src="@drawable/icon_status"
            android:layout_marginLeft="@dimen/info_margin_left"
            />
        <TextView
            android:layout_width="@dimen/width_column"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/info_margin_left"
            android:id="@+id/tv_level_language"
            android:text="750"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/icon_margin_left">
        <ImageView
            android:layout_width="@dimen/icon_info_width"
            android:layout_height="@dimen/icon_info_height"
            android:src="@drawable/icon_issued"/>
        <TextView
            android:layout_width="@dimen/label_info_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/info_margin_left"
            android:text="Nơi cấp: "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_issued_by_language"
            android:text="IIG Việt Nam"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/icon_margin_left">
        <ImageView
            android:layout_width="@dimen/icon_info_width"
            android:layout_height="@dimen/icon_info_height"
            android:src="@drawable/icon_calender"/>
        <TextView
            android:layout_width="@dimen/label_info_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/info_margin_left"
            android:text="Ngày cấp: "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dateOf_issued_language"
            android:text="2012-01-19"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/icon_margin_left">
        <ImageView
            android:layout_width="@dimen/icon_info_width"
            android:layout_height="@dimen/icon_info_height"
            android:src="@drawable/icon_expire"/>
        <TextView
            android:layout_width="@dimen/label_info_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/info_margin_left"
            android:text="Hết hạn: "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_expire_language"
            android:text="2014-01-19"
            />
    </LinearLayout>

</LinearLayout>